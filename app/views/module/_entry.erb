<article class="entry">
  <header>
    <h1 class="title"><%= @entry.title %></h1>
    <ul class="detail">
      <li class="item date"><%= @entry.publish_date.strftime("%Y-%m-%d") %></li>
      <li class="item author">sawa-zen</li>
    </ul>

  </header>
  <div class="content">
    <%= @entry.content %>
  </div>

  <!-- シャアボタン -->
