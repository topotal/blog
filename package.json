{
  "name": "sawa-zen.com",
  "version": "1.0.0",
  "description": "sawa-zen.com ====",
  "main": "index.js",
  "scripts": {
    "start": "npm run build & npm run watch & npm run rackup",
    "rackup": "JWT_SECRET='yoursecret' JWT_ISSUER='blog.topotal.com' bundle exec rackup",
    "build": "npm run build:sass & npm run build:js",
    "build:js": "browserify src/js/app.js -t babelify --outfile public/assets/js/bundle.js",
    "build:sass": "node-sass src/sass --output public/assets/css",
    "watch": "npm run watch:sass & npm run watch:js",
    "watch:js": "watchify src/js/app.js -t babelify --outfile public/assets/js/bundle.js",
    "watch:sass": "node-sass src/sass --output public/assets/css -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sawa-zen/sawa-zen.com.git"
  },
  "author": "Takayoshi Sawada",
  "homepage": "sawa-zen.com",
  "devDependencies": {
    "babel": "^5.6.14",
    "node-sass": "^3.2.0",
    "babelify": "^6.1.3",
    "browserify": "^11.0.0",
    "watchify": "^3.7.0"
  }
}
